{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@show-off/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@show-off/api/auth": ["libs/api/auth/src/index.ts"],
      "@show-off/api/collections": ["libs/api/collections/src/index.ts"],
      "@show-off/api/shared": ["libs/api/shared/src/index.ts"],
      "@show-off/api/users": ["libs/api/users/src/index.ts"],
      "@show-off/db": ["libs/db/src/index.ts"],
      "@show-off/ui/auth": ["libs/ui/auth/src/index.ts"],
      "@show-off/ui/collections": ["libs/ui/collections/src/index.ts"],
      "@show-off/ui/home": ["libs/ui/home/src/index.ts"],
      "@show-off/ui/profile": ["libs/ui/profile/src/index.ts"],
      "@show-off/ui/shared": ["libs/ui/shared/src/index.ts"],
      "zigzag": ["zigzag/projects/zigzag/src/public-api.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
